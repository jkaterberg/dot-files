set $mod Mod4

#Set the color theme
#exec_always wal --theme base16-atelier-forest

#exec xrdb ~/.config/.Xresources
set_from_resource $fg 		i3wm.foreground #f0f0f0
set_from_resource $bg 		i3wm.background #ff0000
set_from_resource $active 	i3wm.color4 	#f0f0f0
set_from_resource $text_d	i3wm.color7 	#000000
set_from_resource $text_l	i3wm.color15	#000000
set_from_resource $good		i3wm.color2		#00ff00
set_from_resource $degraded	i3wm.color3		#ff00ff
set_from_resource $bad		i3wm.color1		#ff0000

set $font Droid Sans Mono 10

##################################Appearance####################################

#Font
font=pangu:"$font"

# class                 border  backgr. text	indicator child_border
client.focused          $active $bg     $fg  	$bg       $active
client.focused_inactive $bg     $bg     $fg  	$bg       $bg
client.unfocused        $bg     $bg     $fg  	$bg       $bg
client.urgent           $bg     $bg     $fg  	$bg       $bg
client.placeholder      $bg     $bg     $fg  	$bg       $bg

client.background       $bg

#make the borders super small
default_border pixel 1 

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -i ~/Pictures/wallpaper/00.png --nofork

# Set the proper screen layout
exec sh ~/.screenlayout/primary.sh
exec nvidia-settings --assign CurrentMetaMode="DPY-2: nvidia-auto-select +0+0 {ForceCompositionPipeline=On}, DPY-4: nvidia-auto-select +1920+0 {ForceCompositionPipeline=On}" 

#start/configure dunstify
exec_always killall dunst; dunst -lb "$bg" -nb "$bg" -cb "$bg" -lf "$fg" -bf "fg" -cf "$fg" -nf "$fg" -fn "$font" -s -lto 3 -nto 5 -cto 0;

#start picom
exec_always picom; dunstify "Started Picom" -r 112233

#set screen config
#bindsym $mod+p exec bash /home/justin/.screenlayout/dual.sh
#bindsym $mod+Shift+p exec bash /home/justin/.screenlayout/single.sh

#wallpaper
exec_always nitrogen --restore

##################################Applications####################################
# Applets
exec --no-startup-id volumeicon
exec --no-startup-id redshift-gtk
exec --no-startup-id udiskie -ant -f pcmanfm

# Application shortcuts
bindsym $mod+b exec firefox
bindsym $mod+m exec spotify
bindsym $mod+Return exec urxvt

##################################Function Keys####################################
# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id sh ~/.config/scripts/change_volume +5% 
bindsym XF86AudioLowerVolume exec --no-startup-id sh ~/.config/scripts/change_volume -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && ./change_volume +0%
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

#Brightness Controls
bindsym XF86MonBrightnessUp exec --no-startup-id change_brightness -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id change_brightness -dec 5

#Audio Controls
bindsym XF86AudioPlay exec --no-startup-id playerctl -a play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl -a next
bindsym XF86AudioPrev exec --no-startup-id playerctl -a previous


##################################System Navigation####################################
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

#Scratchpad
bindsym $mod+Shift+x move scratchpad
bindsym $mod+x scratchpad show

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+c split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child

