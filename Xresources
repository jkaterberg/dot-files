*.font: xft:Droid Sans Mono:style=Regular:size=10
*.boldFont: xft:Droid Sans Mono:style=Bold:size=10

! Terminal config
URxvt.scrollBar: false
URxvt.bell-command: canberra-gtk-play -i bell

! Perl Extensions
URxvt.perl-ext-common: font-size,keyboard-select

URxvt.keyboard-select.clipboard: true

! Custom keybindings
URxvt.keysym.C-Up:		font-size:increase
URxvt.keysym.C-Down:	font-size:decrease
URxvt.keysym.C-S-Up:	font-size:incglobal
URxvt.keysym.C-S-Down:	font-size:decglobal

URxvt.keysym.C-s:		keyboard-select:activate



